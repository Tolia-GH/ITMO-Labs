{
  "id": "payment-details",
  "type": "default",
  "schemaVersion": 14,
  "exporter": {
    "name": "Camunda Modeler",
    "version": "5.15.1"
  },
  "executionPlatform": "Camunda Platform",
  "executionPlatformVersion": "7.17.0",
  "components": [
    {
      "type": "text",
      "text": "# Payment Details"
    },
    {
      "label": "Payment Method",
      "type": "select",
      "key": "paymentMethod",
      "values": [
        { "label": "Credit Card", "value": "CARD" },
        { "label": "Balance Payment (Simulated)", "value": "BALANCE" }
      ],
      "validate": { "required": true }
    },
    {
      "label": "Cardholder Name (Required for Card)",
      "type": "textfield",
      "key": "cardHolder",
      "validate": { "required": false }
    },
    {
      "label": "Card Number (Required for Card)",
      "type": "textfield",
      "key": "cardNumber",
      "validate": { "required": false, "minLength": 12, "maxLength": 19 }
    },
    {
      "label": "Expiry Date (MM/YY) (Required for Card)",
      "type": "textfield",
      "key": "expiry",
      "validate": { "required": false, "minLength": 4, "maxLength": 5 }
    },
    {
      "label": "CVV (Required for Card)",
      "type": "textfield",
      "key": "cvv",
      "validate": { "required": false, "minLength": 3, "maxLength": 4 }
    }
  ]
}

