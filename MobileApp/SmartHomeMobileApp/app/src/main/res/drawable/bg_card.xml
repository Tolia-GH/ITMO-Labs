<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 设置背景颜色 -->
    <solid android:color="#FFFFFF"/> <!-- 背景颜色 -->

    <!-- 设置圆角半径 -->
    <corners
        android:radius="16dp"/> <!-- 圆角半径 -->

    <!-- 设置边框 -->
    <stroke
        android:width="2dp"
        android:color="#000000"/>

    <!-- 内边距 -->
    <padding
        android:left="10dp"
        android:right="10dp"
        android:top="5dp"
        android:bottom="5dp" />
</shape>