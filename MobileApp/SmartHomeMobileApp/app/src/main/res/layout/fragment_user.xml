<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.user.UserFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="60dp">

        <ImageView
            android:id="@+id/img_fragment_user_head_img"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/ic_user_head"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_fragment_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Username"
            app:layout_constraintTop_toBottomOf="@id/img_fragment_user_head_img"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:layout_marginStart="@dimen/element_start_end_margin"
            android:layout_marginEnd="@dimen/element_start_end_margin"
            android:layout_marginTop="@dimen/element_vertical_margin"
            android:layout_marginBottom="@dimen/element_vertical_margin"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_fragment_user_bio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bio: A hard working student"
            app:layout_constraintTop_toBottomOf="@id/tv_fragment_user_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="center"
            android:layout_marginStart="@dimen/element_start_end_margin"
            android:layout_marginEnd="@dimen/element_start_end_margin"
            android:layout_marginTop="@dimen/element_vertical_margin"
            android:layout_marginBottom="@dimen/element_vertical_margin"
            android:textSize="18sp"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:layout_marginTop="@dimen/element_vertical_margin"
            android:layout_marginBottom="@dimen/element_vertical_margin"
            android:layout_marginStart="@dimen/element_start_end_margin"
            android:layout_marginEnd="@dimen/element_start_end_margin"
            app:layout_constraintTop_toBottomOf="@id/tv_fragment_user_bio"
            android:orientation="vertical"
            android:background="@drawable/bg_card">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/bt_fragment_user_logout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/element_layout_height"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/element_start_end_margin"
            android:layout_marginEnd="@dimen/element_start_end_margin"
            android:layout_marginTop="@dimen/element_vertical_margin"
            android:layout_marginBottom="@dimen/element_vertical_margin"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Log Out"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold"
            app:cornerRadius="500dp"
            tools:ignore="VisualLintButtonSize" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>